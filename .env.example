# Application Configuration
ENVIRONMENT=development
APP_NAME=FastAPI Backend Template
APP_VERSION=0.1.0
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=false
RELOAD=false

# Server Configuration
BASE_URL=http://localhost:8000
HOST=0.0.0.0
PORT=8000

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/backend
DB_ECHO=false

# Database Connection Pool Settings
# Development settings (adjust for production)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30
DB_CONNECT_TIMEOUT=10
DB_POOL_PRE_PING=false

# Production Pool Settings (uncomment for production)
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=30
# DB_POOL_PRE_PING=true

# Staging Pool Settings (uncomment for staging)
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=15
# DB_POOL_RECYCLE=1800
# DB_POOL_PRE_PING=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# OpenTelemetry Configuration
OTEL_ENABLED=false
OTEL_SERVICE_NAME=fastapi-backend-template
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_EXPORTER_OTLP_HEADERS=authorization=Bearer your-token-here

# Celery Configuration (if using message broker other than Redis)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
